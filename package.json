{
	"license": "MIT",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "siu build",
		"test": "jest"
	},
	"lint-staged": {
		"packages/**/lib/**/*.{ts,tsx,js,jsx,vue,css,scss,less,styl}": [
			"prettier --write",
			"eslint --fix",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"post-merge": "siu lint --type=diff-deps",
			"pre-commit": "lint-staged",
			"commit-msg": "siu lint --type=git-commit-msg"
		}
	},
	"devDependencies": {
		"@siu/cli-config": "1.0.0",
		"@types/jest": "25.1.4",
		"@types/node": "13.9.5",
		"@typescript-eslint/eslint-plugin": "2.25.0",
		"@typescript-eslint/parser": "2.25.0",
		"eslint": "6.8.0",
		"husky": "4.2.3",
		"jest": "25.2.4",
		"lerna": "3.20.2",
		"lint-staged": "10.0.10",
		"prettier": "2.0.2",
		"ts-jest": "25.2.1",
		"typescript": "3.8.3"
	}
}
