{
	"license": "MIT",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "siu build",
		"test": "jest"
	},
	"lint-staged": {
		"packages/**/lib/**/*.{ts,tsx,js,jsx,vue,css,scss,less,styl}": [
			"prettier --write",
			"eslint --fix",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"post-merge": "siu doctor -t=pkg -a=diff",
			"pre-commit": "lint-staged",
			"commit-msg": "siu lint -t=git"
		}
	},
	"devDependencies": {
		"@siu/cli-config": "1.0.0",
		"@types/jest": "24.9.0",
		"@types/node": "13.1.8",
		"@typescript-eslint/eslint-plugin": "2.16.0",
		"@typescript-eslint/parser": "2.16.0",
		"eslint": "6.8.0",
		"husky": "4.0.10",
		"jest": "24.9.0",
		"lerna": "3.20.2",
		"lint-staged": "9.5.0",
		"prettier": "1.19.1",
		"ts-jest": "24.3.0",
		"typescript": "3.7.5"
	}
}
